<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{>head}}
    <title>{{title}}</title>
    <link rel="stylesheet" href="{{style}}">
</head>

<body>
    <center>
        <br>
        <div class="card-nav  ">
            {{#if Result}}
            <h4>Menu...{{Result.0.catagories}}</h4>
            {{/if}}
        </div>
        <br>
        {{#if Result}}
        {{#each Result}}
        <div class="card d-flex flex-row " style="width: 18rem;">
            <div class="container">
                <img src="https://source.unsplash.com/200x120/?food" class="card-img-top pt-2" alt="...">
                <div class="card-body">
                    <p class="card-text">{{this.foodname}}</p>
                </div>
            </div>
            <div class="price">
                <ul class="pagination quantity">
                    <li class="page-item quantity_plus page-link">
                        <i class="fa-solid fa-plus "></i>
                    </li>
                    <li class="page-item display_quantity page-link" aria-valuenow="1">0</li>
                    <li class="page-item quantity_minus page-link">
                        <i class="fa-solid fa-minus "></i>
                    </li>
                </ul>
                <h4>â‚¹ {{this.foodprice}}</h4>
            </div>
        </div>
        <br>
        <div class="final_price">{{this.foodprice}}</div>

        {{/each}}
        {{/if}}
        <br>
        <div class="cart">
            <h4>View cart</h4>
        </div>
    </center>




