<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    {{>head}}
</head>

<body>
    <center>
        <div class="container table">
            <table>
                <tr class="table-heading">
                    <th>Id</th>
                    <th>Catagories</th>
                    <th>Image</th>
                    <th>Food Name</th>
                    <th>Food Price</th>
                    <th>Action</th>
                    <th>Date</th>
                </tr>
                {{#each Result}}
                <tr>
                    <td>
                        {{this.id}}
                    </td>
                    <td>
                        {{this.catagories}}
                    </td>
                    <td>
                        {{this.foodimage}}
                    </td>
                    <td>
                        {{this.foodname}}
                    </td>
                    <td>
                        {{this.foodprice}}
                    </td>
                    <td>
                        {{this.date}}
                    </td>
                    <td>
                        <a href="/delete_menu_record?id={{this.id}}">Delete</a>
                        <br>
                        <a href="">More</a>
                    </td>
                </tr>
                {{/each}}
            </table>
            <p class="customerno">Total Food Present Now: <u>{{Result.length}}</u></p>
        </div>
    </center>



